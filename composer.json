{
	"name": "triboon/theme-boilerplate",
	"type": "wordpress-theme",
	"description": "A modern WordPress theme boilerplate with Composer and NPM support.",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Saeid6780",
			"homepage": "https://github.com/saeid6780/triboon-theme"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"autoload": {
		"psr-4": {
			"Triboon\\": "inc/classes/"
		}
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"wp-cli/i18n-command": "^2.4",
		"phpunit/phpunit": "^9.0",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"scripts": {
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
		"test": "@php ./vendor/bin/phpunit",
		"make-pot": "wp i18n make-pot . languages/theme.pot"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}